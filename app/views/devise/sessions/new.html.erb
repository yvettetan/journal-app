<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'mt-4 col-md-6 col-lg-4'}) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :password, class: 'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field mt-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'form-label' %>
    </div>
  <% end %>
  <div class="actions my-4">
    <%= f.submit "Log in", class: 'btn btn-secondary' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
