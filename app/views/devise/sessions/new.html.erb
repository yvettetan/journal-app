<section class='container-center'>
  <div class="container-fluid row justify-content-center">
    <div class="col-md-7 col-lg-5 bg-light shadow mt-4">
      <div class="p-4 p-md-5">
        <h3 class="text-center mb-4">Log In</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mt-2">
            <%= f.label :email, class: 'form-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
          </div>
          <div class="field mt-2">
            <%= f.label :password, class: 'form-label' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field mt-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: 'form-label' %>
            </div>
          <% end %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <div class="actions my-4 d-flex flex-column justify-content-center">
            <%= f.submit "Log in", class: 'btn btn-secondary' %>
            <p class='align-self-center mt-2'>
              Don't have an account? <%= link_to "Sign Up", new_registration_path(resource_name), class: 'link-primary' %><br />
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
